<p id="notice"><%= notice %></p>

<h1 class='title'>Todos</h1>

<table class='table is-striped is-hoverable'>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.description %></td>
        <td><%= link_to 'Show', todo, class: 'button is-link' %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo), class: 'button is-link' %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path, class: 'button is-primary' %>
